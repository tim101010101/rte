{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "lib": ["lib/*"]
    }
  },
  "include": ["lib/**/*"]
}
